{
  "name": "resize-quill-image",
  "version": "1.0.0",
  "description": "A lightweight Quill module to resize images with handles and overlays",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "quill",
    "quilljs",
    "quill-module",
    "editor",
    "quill-resize-image",
    "image",
    "resize",
    "quill image resize",
    "resize quill image"
  ],
  "author": "Nemanja Galbinovic",
  "license": "MIT",
  "scripts": {
    "build": "vite build && node -e \"require('fs').cpSync('src/index.d.ts', 'dist/index.d.ts')\""
  },
  "peerDependencies": {
    "quill": ">=1.3.7 <=2.0.3"
  },
  "devDependencies": {
    "vite": "^6.3.5"
  }
}